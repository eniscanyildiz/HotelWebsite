@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Check in Date</th>
                <th>Check out Date</th>
                <th>Status</th>
                <th>Approve</th>
                <th>Cancel</th>
                <th>Hold</th>
                <th>Update</th>
                <th>Details</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.Checkout).ToString("dd-MMM-yyyy"))</td>
                    <td><span class="badge badge-primary px-2">@item.Status</span></td>
                    <td><a href="/BookingAdmin/ApprovedResevation/@item.BookingID" class="btn btn-success">Approve</a></td>
                    <td><a href="" class="btn btn-danger">Cancel</a></td>
                    <td><a href="" class="btn btn-primary">Hold</a></td>
                    <td><a href="" class="btn btn-info">Update</a></td>
                    <td><a href="" class="btn btn-dark">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


