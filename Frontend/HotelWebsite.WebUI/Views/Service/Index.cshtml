@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Service Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceID</th>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>

<a href="/Service/AddService/" class="btn btn-info">New Service</a>